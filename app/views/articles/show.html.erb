<div class="container mt-4">
  <h1 class="mb-4"><%= @article.title %></h1>

  <div class="card mb-4">
    <div class="card-body">
      <p class="card-text"><%= @article.body %></p>
    </div>
  </div>

  <div class="btn-group" role="group">
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-secondary" %>
    <%= link_to "Destroy", article_path(@article), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    <%= link_to "Back to Articles", articles_path, class: "btn btn-outline-primary" %>
  </div>
</div>
