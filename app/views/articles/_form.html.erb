<%= form_with model: article, class: "needs-validation", novalidate: true do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control #{'is-invalid' if article.errors.include?(:title)}" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="invalid-feedback"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control #{'is-invalid' if article.errors.include?(:body)}", rows: 5 %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="invalid-feedback"><%= message %></div>
    <% end %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
